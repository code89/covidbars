<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<style>
  .center {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  h2,
  h3 {
    text-align: center;
  }
</style>

<h1 style="text-align: center;">Covidbars</h1>
<br>
{{#each info as |val key| }}

<h2 center;">{{val.country}}</h2>
<h3 class="text-warning">Total Cases:{{val.cases}}</h3>
<h3 class="text-success">Total Recovered:{{val.recovered}}</h3>
<h3 class="text-danger">Total Deaths:{{val.deaths}}</h3>

<img class="center" src="{{val.countryInfo.flag}}" /><br>

{{/each}}